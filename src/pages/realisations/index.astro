---
// src/pages/realisations/index.astro
import Layout from "@/layouts/SiteLayout.astro";
import ProjetCard from "@/components/ProjetCard.astro";
import { getProjets } from "@/lib/wp";

let projets = [];
let wpOK = true;

try {
  projets = await getProjets({ per_page: 12 });
} catch (e) {
  console.error("[WP] Réalisations:", e);
  wpOK = false;
}
---

<Layout
  title="Réalisations — sélection de projets"
  description="Exemples concrets pour pros : ce qui bloquait, ce que nous avons amélioré, et l’impact."
>
  <section class="hero">
    <h1>Réalisations</h1>
    <p class="lead">
      Exemples de projets pour TPE/PME et indépendants : résumé clair, lien vers
      le site en ligne.
    </p>
  </section>

  {
    !wpOK ? (
      <p role="status">
        Les projets sont momentanément indisponibles. Réessayez dans un instant.
      </p>
    ) : projets.length === 0 ? (
      <p>Aucune réalisation publiée pour le moment.</p>
    ) : (
      <>
        <h2 class="visually-hidden">Liste de projets</h2>
        <ul class="grid works" aria-label="Réalisations">
          {projets.map((p) => (
            <li class="item">
              <ProjetCard p={p} />
            </li>
          ))}
        </ul>

        <section class="cta">
          <h2 class="visually-hidden">Passer à l’action</h2>
          <a class="btn btn--accent" href="/contact/">
            Vous voulez un résultat similaire ? Planifier un appel 15&nbsp;min
          </a>
        </section>
      </>
    )
  }
</Layout>

<style>
  .visually-hidden {
    position: absolute !important;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0 0 0 0);
    white-space: nowrap;
    border: 0;
  }

  .works {
    list-style: none;
    padding: 0;
    margin: 1rem 0 0;
    display: grid;
    gap: 16px;
    grid-template-columns: repeat(auto-fit, minmax(220px, 300px));
    justify-content: center;
    align-items: start;
  }

  .works .item {
    max-width: 300px;
    justify-self: center;
  }

  /* Bouton / CTA */
  .cta {
    display: grid;
    place-items: center;
    margin: 1.2rem 0 0;
  }
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.65rem 0.9rem;
    border-radius: 12px;
    text-decoration: none;
    border: 1px solid var(--border);
    background: var(--primary);
    color: #23212e;
    box-shadow: var(--shadow);
  }
  .btn--accent {
    background: var(--orange);
    border-color: transparent;
    color: #23212e;
  }
</style>
