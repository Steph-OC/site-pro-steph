{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["astro/client"]   // ðŸ‘ˆ pas de @astrojs/react ici
  },
  "plugins": [{ "name": "@astrojs/ts-plugin" }],
  "include": [
    "src",
    "astro.config.*",
    "env.d.ts",
    ".astro/types.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
